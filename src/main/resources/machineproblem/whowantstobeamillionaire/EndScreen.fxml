    <Label fx:id="endMessage" text="GAME OVER" wrapText="true" textAlignment="CENTER"/>

    <Label fx:id="finalScore" text="0" wrapText="true" textAlignment="CENTER"/>

    <VBox prefHeight="40" />

    <HBox spacing="40" alignment="CENTER"> <Button fx:id="playAgainButton" text="PLAY AGAIN" onAction="#playAgain" styleClass="game-button" prefWidth="220" prefHeight="70"/> <Button fx:id="mainMenuButton" text="MAIN MENU" onAction="#goToMainMenu" styleClass="game-button" prefWidth="220" prefHeight="70"/> </HBox>

</VBox>