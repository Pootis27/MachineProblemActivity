<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Pos?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="machineproblem.whowantstobeamillionaire.MainGameController"
      alignment="CENTER" spacing="30" prefHeight="720.0" prefWidth="1280.0">

    <!-- End Message -->
    <Label fx:id="endMessage" text="Game Over!" style="-fx-font-size: 48;" wrapText="true" textAlignment="CENTER"/>

    <!-- Score Placeholder -->
    <Label fx:id="finalScore" text="You won: $0" style="-fx-font-size: 32;" wrapText="true" textAlignment="CENTER"/>

    <!-- Buttons -->
    <HBox spacing="40" alignment="CENTER">
        <padding>
            <Insets top="10" bottom="10" left="20" right="20"/>
        </padding>
        <Button fx:id="playAgainButton" text="Play Again" onAction="#playAgain" prefWidth="200" prefHeight="70"/>
        <Button fx:id="mainMenuButton" text="Main Menu" onAction="#goToMainMenu" prefWidth="200" prefHeight="70"/>
    </HBox>

</VBox>
